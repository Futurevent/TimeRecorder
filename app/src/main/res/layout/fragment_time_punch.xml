<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.robotshell.timerecorder.view.CircleButton
        android:id="@+id/punch"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_media_play"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip" />

    <com.truizlop.fabreveallayout.FABRevealLayout
        android:id="@+id/fab_reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#99CC00">

        <android.support.design.widget.FloatingActionButton
            style="@style/FABStyle"
            android:src="@android:drawable/ic_media_play"
            app:backgroundTint="@color/fab" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/album_title_text"
                    style="@style/AlbumTitleStyle"
                    android:text="@string/album_title" />

                <TextView
                    android:id="@+id/artist_name_text"
                    style="@style/ArtistNameStyle"
                    android:text="@string/artist_name" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/FABStyle"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/previous"
                        style="@style/MusicButtonStyle"
                        app:srcCompat="@android:drawable/ic_media_previous" />

                    <ImageView
                        android:id="@+id/stop"
                        style="@style/MusicButtonStyle.CenterButtonStyle"
                        app:srcCompat="@android:drawable/ic_media_play" />

                    <ImageView
                        android:id="@+id/next"
                        style="@style/MusicButtonStyle"
                        app:srcCompat="@android:drawable/ic_media_next" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/song_progress_bar"
                    style="@style/MusicBarStyle" />

                <TextView
                    android:id="@+id/song_title_text"
                    style="@style/SongTitleStyle"
                    android:text="@string/song_title" />
            </LinearLayout>
        </RelativeLayout>

    </com.truizlop.fabreveallayout.FABRevealLayout>
</LinearLayout>
